{
  "name": "client-lourd",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build:angular": "cd ../client && npx ng build --configuration production --base-href ./ --deploy-url ./",
    "sync-angular": "node scripts/sync-angular.js",
    "build": "npm run build:angular && npm run sync-angular && electron-builder"
  },
  "devDependencies": {
    "electron": "^31.0.0",
    "electron-builder": "^24.13.3",
    "fs-extra": "^11.2.0"
  },
  "build": {
    "appId": "com.log3900.clientlourd",
    "productName": "ClientLourd",
    "files": [
      "main.js",
      "package.json",
      "renderer/**"
    ],
    "win": {
      "target": "dir"
    }
  }
}